{
    "name": "ekojs/oauth2client",
    "description": "Oauth2 PKCE Client Library based on RFC7636",
    "type": "library",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Eko Junaidi Salam",
            "email": "eko_junaidisalam@live.com"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
	    "test": "phpunit -c phpunit.xml --testdox"
    },
    "require": {
        "php": ">=7.3",
        "ekojs/oauth2helper": "^1.1",
        "guzzlehttp/guzzle": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "OC\\Library\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OC\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "php-coveralls/php-coveralls": "^2.5"
    }
}
